<div class="text-center">
  <div>
  <%= link_to "Edit/Delete Cart", cart_path(@cart) %>
  </div>

      <img src=<%= @cart.image.url(:medium) %> alt="">

      <h4><%= @cart.comments %></h4>

  <div>
    <h2>Parts On This Cart</h2>
  </div>

  <% @cart.parts.each do |part| %>
    <div class="col-xs-6">
      <a href="<%= category_part_path(part.category, part) %>">
        <img src=<%= part.image.url %> alt="">
      </a>
      <h3><%= part.description %></h3>

      <div class="col-xs-12">
        <%= button_to 'Add to My Cart', cart_parts_path(part_id: part) %>
      </div>
    </div>
    
  <% end %>
</div>

