<div class= "col-sm-12">
  <img class="img-responsive col-sm-6 col-sm-offset-3 <%= 'rotate' unless dont_rotate(@cart) %>" src=<%= @cart.image.url %> alt="">
</div>

<h2><%= @cart.comments %></h2>

<h2 class="text-center">Parts</h2>

<% @cart.parts.each do |part| %>

  <a href="<%= category_part_path(part.category, part) %>" class="thumbnail col-xs-4">
    <img src=<%= part.image.url %> alt="">
  </a>
  <%= part.description %>
  <%= button_to 'Add to My Cart', cart_parts_path(part_id: part) %>
  
<% end %>

