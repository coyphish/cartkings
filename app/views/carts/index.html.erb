
<% @carts.each do |cart| %>

  <div class="col-xs-6 col-sm-3 thumbnail text-center">

    <div class="cart_comments col-xs-12 row text-center">
      <h4><%= cart.comments  %></h4>
    </div>

      <img src="<%= cart.image.url(:medium) %>" alt="<%= cart.comments %>" class=""/><br>



      <%= button_to 'View This Cart', cart_path(cart),{class: 'btn btn-primary', method: :get}  %>

  </div>




<% end %>
